<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imgProfileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/profile_photo"
        />
    <TextView
        android:id="@+id/txtProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Soumyadev Sanyal"
        android:textSize="40sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_below="@+id/imgProfileImage"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txtProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:text="soumya.sp35@gmail.com"
        android:layout_below="@+id/txtProfileName"/>
    <TextView
        android:id="@+id/txtProfilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_below="@+id/txtProfileEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="+91 9874294619"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtProfleAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_below="@+id/txtProfilePhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="P - 35 State Bank Garden, Thakurpukur, Kolkata - 700063, India"
        android:textStyle="bold" />
</RelativeLayout>